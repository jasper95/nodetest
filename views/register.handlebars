<div class="col-md-6 col-md-offset-3">
  <h2 class="page-header">Signup</h2>
  {{#if form_errors}}
        {{#each form_errors}}
          <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
  {{/if}}
  <form method="post" action="/users/register" enctype="multipart/form-data">
     <div class="form-group">
      <label>Name <span style="color: red">&#42;</span></label>
      <input type="text" class="form-control" placeholder="Name" value="{{old_form.name}}" name="name">
    </div>
    <div class="form-group">
      <label>Username <span style="color: red">&#42;</span></label>
      <input type="text" class="form-control" placeholder="Username" value="{{old_form.username}}" name="username">
    </div>
     <div class="form-group">
      <label>Email <span style="color: red">&#42;</span></label>
      <input type="email" class="form-control" placeholder="Email" value="{{old_form.email}}" name="email">
    </div>
    <div class="form-group">
      <label>Password <span style="color: red">&#42;</span></label>
      <input type="password" class="form-control" placeholder="Password" name="password" value="{{old_form.password}}">
    </div>
    <div class="form-group">
      <label>Confirm Password <span style="color: red">&#42;</span></label>
      <input type="password" class="form-control" placeholder="Password" value="{{old_form.password2}}" name="password2">
    </div>
    <div class="form-group">
      <label>Upload Image</label>
      <div class="input-group">
          <span class="input-group-btn">
              <span class="btn btn-default btn-file">
                  Browseâ€¦ <input type="file" name="avatar" id="imgInp">
              </span>
          </span>
          <input type="text" class="form-control" readonly>
      </div>
      <img id='img-upload' class="img-thumbnail" width="140" height="140"/>
    </div>
    <input type="hidden" name="ext" id="ext"/>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<script src="/js/jquery-3.2.1.min.js"></script>
<script src="/js/upload-helper.js"></script>
<script>
  jQuery(function($){
    $("#imgInp").change(function(){
  	    readURL(this, $('#img-upload'));
        var ext  = $(this).val().split('.').pop();
        $('#ext').val(ext);
  	});
  });
</script>
